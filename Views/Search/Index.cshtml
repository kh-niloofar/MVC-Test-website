@model IEnumerable<DataLayer.Page>
@{
    ViewBag.Title = "Index";
}

<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>تعداد @Model.Count() صفحه با عبارت @ViewBag.name یافت شد</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.PageImageName">
                <h2> <a href="/News/@item.PageId"> @item.PageTitle </a></h2>
                <p>
                    @item.PageText
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.PageCreateDate.ToShamsi() </span>
                <a href="/News/@item.PageId" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }

    </ul>
</section>

