@model IEnumerable<DataLayer.Page>

<!-- most views news -->
<section class="last-news-side border-radius">
    <header><i class="icons icon-star"></i> <h3> پربازدیدترین اخبار </h3></header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.PageImageName">
                <h2> <a href="/News/@item.PageId">@item.PageTitle</a></h2>
                <span>انتشار : @item.PageCreateDate.ToShamsi()</span>
            </li>
        }

    </ul>
</section>
<!-- end most views news -->
